# Tarot Reader Application Environment Variables
# Copy this file to .env and update the values for your environment

# === Database Configuration ===
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tarotreader
# For Docker Compose development:
# DATABASE_URL=postgres://postgres:postgres@postgres:5432/tarotreader

# === Backend Configuration ===
BACKEND_HOST=api.yourdomain.com
BACKEND_PORT=8000
ROCKET_ADDRESS=0.0.0.0
ROCKET_PORT=8000
ROCKET_LOG_LEVEL=normal
RUST_LOG=info

# === Frontend Configuration ===
FRONTEND_HOST=yourdomain.com
FRONTEND_PORT=80
VITE_API_URL=http://localhost:8000
# For production:
# VITE_API_URL=https://api.yourdomain.com

# === CORS Configuration ===
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# === Traefik Configuration (Production) ===
# These are used by the main compose.yaml for production deployment
TRAEFIK_NETWORK=traefik_default

# === PostgreSQL Configuration (Development) ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tarotreader

# === Optional: External API Keys ===
# Add any third-party API keys here if needed for tarot card data, AI interpretations, etc.
# OPENAI_API_KEY=your-api-key-here
# TAROT_API_KEY=your-api-key-here

# === Optional: Authentication ===
# JWT_SECRET=your-secret-key-here
# SESSION_SECRET=your-session-secret-here

# === Optional: Email Configuration ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# === Environment ===
# Options: development, staging, production
ENVIRONMENT=development

# === Feature Flags ===
ENABLE_REGISTRATION=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_LOGGING=false
